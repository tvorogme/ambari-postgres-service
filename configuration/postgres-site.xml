<configuration supports_final="true" supports_adding_forbidden="true">
  <property>
    <name>listen_addresses</name>
    <value>*</value>
    <description>Interfaces on which to listen, changed default to * all interfaces.</description>
  </property>

  <property>
    <name>tcp_port</name>
    <value>5432</value>
    <description>Port on which postgres listens for incoming client connections.</description>
  </property>

  <property>
    <name>max_connections</name>
    <value>200</value>
    <description>Maximum connection count.</description>
  </property>

  <property>
    <name>shared_buffers</name>
    <value>1GB</value>
    <description>Shared Buffers.</description>
  </property>

  <property>
    <name>effective_cache_size</name>
    <value>3GB</value>
    <description>Effective Cache Size.</description>
  </property>

  <property>
    <name>work_mem</name>
    <value>2GB</value>
    <description>Work Memory.</description>
  </property>

  <property>
    <name>maintenance_work_mem</name>
    <value>256MB</value>
    <description>Maintenance Work Memory.</description>
  </property>

  <property>
    <name>min_wal_size</name>
    <value>1GB</value>
    <description>Minimum WALL Checkpoint Size.</description>
  </property>

  <property>
    <name>max_wal_size</name>
    <value>2GB</value>
    <description>Maximum WALL Checkpoint Size.</description>
  </property>

  <property>
    <name>wal_buffers</name>
    <value>16MB</value>
    <description>WALL Buffers, min 32kB, -1 sets based on shared_buffers.</description>
  </property>

  <property>
    <name>checkpoint_completion_target</name>
    <value>0.9</value>
    <description>Checkpoint Completion Target.</description>
  </property>

  <property>
    <name>default_statistics_target</name>
    <value>100</value>
    <description>Default Statistics Target.</description>
  </property>

</configuration>
